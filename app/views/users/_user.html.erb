<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user, class: "quiz-title" %>
  <% if current_user.edit? && !current_user?(user) %>
  <div class="actions-container">
    <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" }, class: "action-button" %>
  </div>
  <% end %>
</li>
