<div class='nested-fields'>
<div class="row">
	<div class="col-md-1">
	<%= link_to_remove_association "x", f, class: "remove-answer-link" %>
	</div>
	<div class="col-md-6">
    <%= f.text_field :answer_title %>
	</div>
	<div class="col-md-3">
    <%= f.select :correct_answer, options_for_select([ ['No', false], ['Yes', true]], selected: f.object.correct_answer), { prompt: "Is this the correct answer?" } %>
	</div>
</div>
</div>
